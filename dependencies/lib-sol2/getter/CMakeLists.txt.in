# \file dependencies/lib-sol2/getter/CMakeLists.txt.in
# Configured by @CMAKE_CURRENT_LIST_FILE@
#
# @ONLY variables:
#  * CMAKE_GENERATOR - which generator to use
#  * SRC_DIR - where to extract the archive
#  * BUILD_DIR - where the integrated sources are built

cmake_minimum_required(VERSION 3.18...3.25)

project(getter NONE)

include(ExternalProject)
externalproject_add(get-sol2
    URL "https://github.com/ThePhD/sol2/archive/v3.2.2.zip"
    URL_MD5 "02e483e11b34ea1f36ff69f06ab5ba8f"
    CMAKE_ARGS
        "-G@CMAKE_GENERATOR@"
        SOURCE_DIR          "@SRC_DIR@"
        BINARY_DIR          "@BUILD_DIR@"
        CONFIGURE_COMMAND   ""
        BUILD_COMMAND       ""
        INSTALL_COMMAND     ""
        TEST_COMMAND        ""
    # called several times, so don't error out when a patched state is detected
    PATCH_COMMAND grep -q std::in_place, single/include/sol/sol.hpp || { sed -i s,\\r,, single/include/sol/sol.hpp && patch -p3 < ${CMAKE_CURRENT_SOURCE_DIR}/gcc-15.patch; }
)
